{% extends "::base.html.twig" %}
{% block title %}Connexion{% endblock %}
{% block stylesheets  %}
    <link rel="stylesheet" href="{{ asset('/css/ef53a1f.css') }}" />
{% endblock %}

{% block body %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="col-md-offset-1 col-xs-offset-1">
                <div class="row">
                    <div class="col-md-3 col-xs-4 input-group">
                        <span class="input-group-addon" id="label-username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</span>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-xs-4 input-group">
                        <span class="input-group-addon" id="label-password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</span>
                        <input type="password" id="password" name="_password" required="required" class="form-control"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-xs-4 input-group">
                        <span class="input-group-addon" for="remember_me" >{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</span>
                        <span class="input-group-addon" >
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="form-control checkremember"/>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xs-4">
                        <input type="submit" id="_submit" name="_submit" class="btn btn-danger" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>
                </div>
            </div>
    </form>
{% endblock fos_user_content %}
{% endblock %}